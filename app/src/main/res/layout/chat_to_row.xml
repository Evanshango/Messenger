<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/chat_to_message_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:maxWidth="250dp"
            android:backgroundTint="@android:color/darker_gray"
            android:background="@drawable/input"
            app:layout_constraintBottom_toBottomOf="@+id/chat_to_image"
            app:layout_constraintTop_toTopOf="@+id/chat_to_image"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/chat_to_image"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_to_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>

</android.support.constraint.ConstraintLayout>