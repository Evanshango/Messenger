<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/chat_from_message_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message"
            app:layout_constraintTop_toTopOf="@+id/chat_from_image"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/chat_from_image"
            android:padding="16dp"
            android:maxWidth="250dp"
            android:background="@drawable/input"
            app:layout_constraintStart_toEndOf="@+id/chat_from_image"
            android:layout_marginStart="8dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_from_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="6dp"/>

</android.support.constraint.ConstraintLayout>